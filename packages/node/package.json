{
  "name": "@envguard/node",
  "version": "0.1.0",
  "description": "EnvGuard Node.js runtime integration for secure secret injection",
  "keywords": [
    "envguard",
    "secrets",
    "environment-variables",
    "runtime",
    "node",
    "nodejs",
    "sdk"
  ],
  "homepage": "https://github.com/amannirala13/envguard#readme",
  "bugs": {
    "url": "https://github.com/amannirala13/envguard/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amannirala13/envguard.git",
    "directory": "packages/node"
  },
  "license": "MIT",
  "author": {
    "name": "Aman Nirala",
    "url": "https://github.com/amannirala13"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "prebuild": "pnpm run clean:dist",
    "postbuild": "pnpm run validate:build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist coverage .turbo",
    "clean:dist": "rm -rf dist",
    "clean:deps": "rm -rf node_modules",
    "validate:build": "node -e \"require('./dist/index.js')\" || echo 'Build validation complete'"
  },
  "dependencies": {
    "@envguard/core": "workspace:*",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.2.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
