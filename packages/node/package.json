{
  "name": "@envguard/node",
  "version": "0.1.2",
  "description": "EnvGuard Node.js runtime - Drop-in dotenv replacement with OS keychain",
  "keywords": [
    "envguard",
    "dotenv",
    "environment",
    "secrets",
    "keychain",
    "config",
    "env",
    "runtime",
    "nodejs",
    "security"
  ],
  "homepage": "https://github.com/amannirala13/envguard#readme",
  "bugs": {
    "url": "https://github.com/amannirala13/envguard/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amannirala13/envguard.git",
    "directory": "packages/node"
  },
  "license": "MIT",
  "author": {
    "name": "Aman Nirala",
    "url": "https://github.com/amannirala13"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js",
      "require": "./dist/config.cjs"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "import": "./dist/register.js",
      "require": "./dist/register.cjs"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "import": "./dist/testing.js",
      "require": "./dist/testing.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "prebuild": "pnpm run clean:dist",
    "postbuild": "pnpm run validate:build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist coverage .turbo",
    "clean:dist": "rm -rf dist",
    "clean:deps": "rm -rf node_modules",
    "validate:build": "node -e \"const pkg = require('./package.json'); console.log('Build validated for', pkg.name, pkg.version);\""
  },
  "devDependencies": {
    "@envguard/core": "workspace:*",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.2.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
