{
  "name": "@envguard/cli",
  "version": "0.1.7",
  "description": "EnvGuard CLI - Local-first secret management tool for storing secrets in OS keychain",
  "keywords": [
    "secrets",
    "environment-variables",
    "keychain",
    "security",
    "cli",
    "env",
    "dotenv",
    "credentials",
    "password-manager",
    "macos-keychain",
    "windows-credential-manager"
  ],
  "homepage": "https://github.com/amannirala13/envguard#readme",
  "bugs": {
    "url": "https://github.com/amannirala13/envguard/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amannirala13/envguard.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "author": {
    "name": "Aman Nirala",
    "url": "https://github.com/amannirala13"
  },
  "type": "module",
  "bin": {
    "envg": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "dev:debug": "NODE_OPTIONS='--inspect' tsx watch src/cli.ts",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "prebuild": "pnpm run clean:dist",
    "postbuild": "pnpm run validate:build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:debug": "vitest --inspect-brk --inspect --single-thread",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist coverage .turbo",
    "clean:dist": "rm -rf dist",
    "clean:deps": "rm -rf node_modules",
    "validate:build": "node ./dist/cli.js --version",
    "prepublishOnly": "pnpm run typecheck && pnpm run build",
    "pack:check": "npm pack --dry-run"
  },
  "dependencies": {
    "@envguard/core": "workspace:*",
    "@napi-rs/keyring": "1.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@vitest/coverage-v8": "^1.2.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
