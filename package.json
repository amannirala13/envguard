{
  "name": "envguard-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Local-first secret management for developers",
  "license": "MIT",
  "type": "module",
  "author": "Your Name",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "// Development": "🔨 Development workflows",
    "dev": "turbo run dev --filter=@envguard/cli",
    "dev:all": "turbo run dev --parallel",
    "// Building": "📦 Build commands",
    "build": "turbo run build",
    "build:force": "turbo run build --force",
    "prebuild": "pnpm run check:types && pnpm run check:format",
    "postbuild": "pnpm run size",
    "// Testing": "🧪 Test commands",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch --parallel",
    "test:coverage": "turbo run test:coverage",
    "test:ci": "turbo run test:coverage --concurrency=2",
    "// Code Quality": "✨ Linting and formatting",
    "lint": "eslint . --max-warnings 0 --config eslint.config.mjs",
    "lint:errors": "eslint . --quiet --config eslint.config.mjs",
    "lint:fix": "eslint . --fix --config eslint.config.mjs",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\" --log-level warn",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\" --log-level warn",
    "// Type Checking": "🔍 TypeScript validation",
    "typecheck": "turbo run typecheck",
    "check:types": "pnpm run typecheck",
    "check:format": "pnpm run format:check",
    "// Validation": "✅ Combined validation commands",
    "validate": "pnpm run check:format && pnpm run lint:errors && pnpm run typecheck && pnpm run test",
    "validate:quick": "pnpm run lint:errors && pnpm run typecheck",
    "// CI/CD": "🚀 Continuous Integration",
    "ci": "pnpm run validate && pnpm run test:ci && pnpm run build",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:publish": "pnpm run build && changeset publish",
    "// Maintenance": "🧹 Cleanup and maintenance",
    "clean": "turbo run clean",
    "clean:all": "pnpm run clean && rm -rf node_modules .turbo coverage",
    "clean:deps": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "clean:build": "pnpm -r exec rm -rf dist && rm -rf .turbo",
    "reset": "pnpm run clean:all && pnpm install",
    "// Documentation": "📚 Documentation generation",
    "docs:generate": "typedoc --options typedoc.json",
    "docs:watch": "typedoc --watch --options typedoc.json",
    "docs:dev": "concurrently \"pnpm run docs:watch\" \"vitepress dev docs\"",
    "docs:build": "pnpm run docs:generate && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "// Release": "🎉 Release management",
    "release": "pnpm run ci && pnpm run ci:publish",
    "changeset": "changeset",
    "changeset:version": "pnpm run ci:version",
    "// Bundle Analysis": "📊 Package analysis",
    "size": "pnpm -r exec du -sh dist 2>/dev/null | grep -v 'No such' || true",
    "size:limit": "pnpm -r exec size-limit || echo 'size-limit not configured'",
    "// Git Hooks": "🪝 Git hook triggers",
    "pre-commit": "lint-staged",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.19.22",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-vitepress-theme": "^1.1.2",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^1.6.1"
  }
}
